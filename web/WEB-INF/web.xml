<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>GCU AVS</display-name>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

    <servlet>
        <servlet-name>UserDashboardCtrl</servlet-name>
        <servlet-class>web.UserDashboardCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserDashboardCtrl</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAuthCtrl</servlet-name>
        <servlet-class>web.UserAuthCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserAuthCtrl</servlet-name>
        <url-pattern>/user-auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserRegisterCtrl</servlet-name>
        <servlet-class>web.UserRegisterCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserRegisterCtrl</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogOutCtrl</servlet-name>
        <servlet-class>web.LogOutCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogOutCtrl</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TicketCtrl</servlet-name>
        <servlet-class>web.TicketCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TicketCtrl</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TicketListCtrl</servlet-name>
        <servlet-class>web.TicketListCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TicketListCtrl</servlet-name>
        <url-pattern>/ticket-list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OpenTicketCtrl</servlet-name>
        <servlet-class>web.OpenTicketCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OpenTicketCtrl</servlet-name>
        <url-pattern>/open-ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageTicketCtrl</servlet-name>
        <servlet-class>web.ManageTicketCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ManageTicketCtrl</servlet-name>
        <url-pattern>/manage-ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommentCtrl</servlet-name>
        <servlet-class>web.CommentCtrl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommentCtrl</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

</web-app>